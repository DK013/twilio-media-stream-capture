{
  "compilerOptions": {
    "target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"sourceMap": true,
		"allowJs": true,
		"typeRoots": [
			"./node_modules/@types"
		]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
