{
  "name": "twilio-media-stream-capture",
  "version": "1.0.0",
  "description": "Simple helper class for Node.js environment for saving Twilio Media Stream audio directly from Twilio to a local WAV format file.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "test": "mocha -r tsx test.ts",
    "test:ci": "npm run build && npm test",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "twilio",
    "media",
    "stream",
    "mulaw",
    "save",
    "audio",
    "file",
    "wav",
    "node.js"
  ],
  "author": "Deep Chakraborty",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/dk013/twilio-media-stream-capture.git"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "mocha": "^11.7.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
